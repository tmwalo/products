@model IEnumerable<Products.Models.Product>
@{
  ViewBag.Title = "Products";
  Layout = "~/Pages/_Layout.cshtml";
}

<h2>Products</h2>
<div>@Html.ActionLink("Add Product", "ProductForm", "Products", null, new { @class = "btn btn-info" })</div>
@if (Model.Count() > 0) {
	<hr />
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>Product Type</th>
				<th>Cost</th>
				<th>Price</th>
				<th>Quantity</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.ActionLink(item.Type, "Edit", "Products", new { id = item.Id })
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Cost)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Price)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Quantity)
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else {
	<p class="lead">No products have been added yet.</p>
}